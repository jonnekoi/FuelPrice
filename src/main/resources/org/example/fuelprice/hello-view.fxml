<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="org.example.fuelprice.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="priceLabel" text="%priceLabel" />
    <TextField fx:id="priceField" promptText="%priceField"/>
    <Label fx:id="distanceLabel" text="%distanceLabel" />
    <TextField fx:id="distanceField" promptText="%distanceField"/>
    <Label fx:id="consumptionLabel" text="%consumptionLabel" />
    <TextField fx:id="kulutusField" promptText="%kulutusField"/>
    <Button  fx:id="calculateButton" onAction="#calculatePrice" text="%calculateButton" />
    <Button fx:id="enButton" onAction="#setEN" text="%enButton" />
    <Button fx:id="fiButton" onAction="#setFI" text="%fiButton" />
    <Button fx:id="irButton" onAction="#setIR" text="%irButton" />
    <Button fx:id="jpButton" onAction="#setJP" text="%jpButton" />
    <Text fx:id="polttoaineenHintaText" strokeType="OUTSIDE"/>
    <Text fx:id="resultText" strokeType="OUTSIDE" strokeWidth="0.0" />
</VBox>
